<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Client Registration"
             x:Class="FireBaseLoginApp.Views.Register.RegisterPage">
    <ContentPage.Content>
        <StackLayout Margin="30,0" Spacing="30" VerticalOptions="CenterAndExpand">
            <Label Text="Register User" FontSize="24" HorizontalOptions="CenterAndExpand" HorizontalTextAlignment="Center"/>
        <Entry Placeholder="UserName" Text="{Binding UserName}"></Entry>
        <Entry Placeholder="Password" Text="{Binding Password}"></Entry>
        <Button CornerRadius="20" Text="Register a new User" BackgroundColor="Black" TextColor="White" Command="{Binding RegisterUser}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
