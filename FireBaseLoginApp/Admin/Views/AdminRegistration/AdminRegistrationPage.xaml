<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" Title="Admin Registration" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FireBaseLoginApp.Admin.Views.AdminRegistration.AdminRegistrationPage">
    <ContentPage.Content>
        <StackLayout Margin="30,0" Spacing="30" VerticalOptions="CenterAndExpand">
            <Label Text="Register User" HorizontalOptions="CenterAndExpand" HorizontalTextAlignment="Center"/>
        <Entry x:Name="USName" Placeholder="UserName" Text="{Binding UserName}"></Entry>
        <Entry x:Name="LNName" Placeholder="Password" Text="{Binding Password}"></Entry>
            <Button CornerRadius="20" Text="Register" BackgroundColor="Black" TextColor="White" Clicked="Button_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
